{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": ["standard", "mocha", "mocha/es6", "mocha/test"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "eol-last": ["never"]
    }
}