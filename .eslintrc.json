{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": ["standard", "mocha", "mocha/es6", "mocha/test"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "rules": {
        "eol-last": ["off"],
        "arrow-parens": ["off"]
    }
}